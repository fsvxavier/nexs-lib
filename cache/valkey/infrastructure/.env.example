# Valkey Infrastructure Environment Variables
# Copy this file to .env and adjust values as needed

# Standalone Configuration
VALKEY_STANDALONE_PORT=6379
VALKEY_STANDALONE_PASSWORD=testpass123

# Cluster Configuration
VALKEY_CLUSTER_PASSWORD=clusterpass123
VALKEY_CLUSTER_START_PORT=7000
VALKEY_CLUSTER_NODE_COUNT=6

# Sentinel Configuration
VALKEY_SENTINEL_PASSWORD=sentinelpass123
VALKEY_SENTINEL_MASTER_NAME=mymaster
VALKEY_SENTINEL_START_PORT=26379
VALKEY_SENTINEL_COUNT=3

# Master/Slave Configuration for Sentinel
VALKEY_MASTER_PORT=6380
VALKEY_SLAVE1_PORT=6381
VALKEY_SLAVE2_PORT=6382

# Docker Configuration
COMPOSE_PROJECT_NAME=nexs-valkey
DOCKER_NETWORK_SUBNET=172.20.0.0/16

# Logging
VALKEY_LOG_LEVEL=notice

# Performance Tuning
VALKEY_MAXMEMORY_POLICY=allkeys-lru
VALKEY_TIMEOUT=300
VALKEY_TCP_KEEPALIVE=300
VALKEY_TCP_BACKLOG=511

# Persistence
VALKEY_SAVE_CONFIG="900 1 300 10 60 10000"
VALKEY_APPENDONLY=yes
VALKEY_APPENDFSYNC=everysec

# Test Configuration
TEST_TIMEOUT=30s
INTEGRATION_TEST_TIMEOUT=60s
SERVICE_START_TIMEOUT=30s
